{
  "manifest_version": 2,
  "name": "cookie-fiend",
  "description": "description",
  "version": "0.0.2",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["cookie-fiend.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "cookie-fiend"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "cookie-fiend"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": ["storage", "tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{daf44bf7-a45e-4450-979c-91cf07434997}",
      "strict_min_version": "42.0"
    }
  }
}
